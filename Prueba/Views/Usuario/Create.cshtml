@model Prueba.DTOs.TransUsuarioDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Trans</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" onload="showLoader()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="transComercio" class="control-label"></label>
                <select asp-for="transComercio" class="form-control" asp-items="ViewBag.ComercioCodigo"></select>
            </div>
            <div class="form-group">
                <label asp-for="transConcepto" class="control-label"></label>
                <input asp-for="transConcepto" class="form-control" />
                <span asp-validation-for="transConcepto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="transMedioP" class="control-label"></label>
                <select asp-for="transMedioP" class="form-control" asp-items="ViewBag.TransMediopId"></select>
            </div>
            <div class="form-group">
                <label asp-for="transTotal" class="control-label">Valor</label>
                <input asp-for="transTotal" class="form-control" type="number"/>
                <span asp-validation-for="transTotal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
